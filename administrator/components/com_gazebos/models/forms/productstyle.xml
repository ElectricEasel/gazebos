<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset
		name="general"
		label="General">

		<field
			name="title"
			type="text"
			label="COM_GAZEBOS_FORM_LBL_PRODUCTSTYLE_TITLE"
			description="COM_GAZEBOS_FORM_DESC_PRODUCTSTYLE_TITLE"
			required="true"
			filter="raw" />

		<field
			name="type_id"
			type="sql"
			class="inputbox"
			label="COM_GAZEBOS_FORM_LBL_PRODUCT_TYPE_ID"
			description="COM_GAZEBOS_FORM_DESC_PRODUCT_TYPE_ID"
			required="true"
			query="SELECT 0 AS `id`, '- Please select -' AS `title` UNION SELECT `id`, `title` FROM `#__gazebos_types`"
			key_field="id"
			value_field="title" />

		<field
			name="state"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field> 

	</fieldset>

	<fieldset
		name="hidden"
		label="Hidden Fields">

		<field
			name="id"
			type="text"
			default="0"
			label="COM_GAZEBOS_FORM_LBL_PRODUCTSTYLE_ID"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC" />

		<field
			name="created_by"
			type="createdby"
			default=""
			label="COM_GAZEBOS_FORM_LBL_PRODUCTSTYLE_CREATED_BY"
			description="COM_GAZEBOS_FORM_DESC_PRODUCTSTYLE_CREATED_BY" />

		<field
			name="checked_out"
			type="hidden"
			filter="unset" />

		<field
			name="checked_out_time"
			type="hidden"
			filter="unset" />

	</fieldset>

</form>
