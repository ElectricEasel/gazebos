<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset
		name="general"
		label="General">

		<field
			name="title"
			type="text"
			label="COM_GAZEBOS_FORM_LBL_PRODUCTMATERIAL_TITLE"
			description="COM_GAZEBOS_FORM_DESC_PRODUCTMATERIAL_TITLE"
			filter="raw" />

		<field
			name="state"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

	</fieldset>

	<fieldset
		name="hidden"
		label="Hidden Fields">
	
		<field
			name="id"
			type="text"
			default="0"
			label="COM_GAZEBOS_FORM_LBL_PRODUCTMATERIAL_ID"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC" />

		<field
			name="line_id"
			type="hidden"
			required="true" />

		<field
			name="type_id"
			type="hidden"
			required="true" />

		<field
			name="created_by"
			type="createdby"
			default=""
			label="COM_GAZEBOS_FORM_LBL_PRODUCTMATERIAL_CREATED_BY"
			description="COM_GAZEBOS_FORM_DESC_PRODUCTMATERIAL_CREATED_BY" />

		<field
			name="checked_out"
			type="hidden"
			filter="unset" />

		<field
			name="checked_out_time"
			type="hidden"
			filter="unset" />
	
	</fieldset>

</form>
